--collapse building physic and vfx display
-- make moel and group it then nme each piece
local building = script.parent

local.fuction = collapse()
for-, part in ipairs(building:GetDescendants()) do 
  if part:isA("Basepart") then 
    part.anchored = false
      end
  end
end

wait(5 )
collapse()

